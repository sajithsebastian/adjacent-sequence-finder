<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.visa.challenge</groupId>
	<artifactId>adjacent-sequence-finder</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>adjacent-sequence-finder</name>
	<description>Find longest adjacent letter sequence</description>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>		
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<id>treetest</id>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>com.visa.challenge.RubikcCubePathFinderTester</mainClass>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>
</project>